{
  "name": "equinoxmax",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "test": "npm run build && npm start",
    "clean": "rimraf dist && rimraf index/* && echo > combined.js",
    "combine": "node combine-scripts.js",
    "build": "npm run clean && npm run combine && webpack",
    "indexbuild": "npm run build && cpx 'dist/combined.bundle.js' index/dist/ && cpx 'dist/combined.bundle.js.map' index/dist/ && cpx 'assets/*' index/assets/ && cpx 'assets/wallpapers/*' index/assets/wallpapers && cpx 'index.html' index/ && cpx '*.png' index/ && cpx '*.PNG' index/ && cpx '*.gif' index/ && cpx '*.jpg' index/ && cpx 'styles.css' index/"
  },
  "author": "M0chaCat",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-transform-modules-commonjs": "^7.x.x",
    "@babel/preset-env": "^7.25.4",
    "babel-loader": "^9.2.1",
    "cpx": "^1.5.0",
    "electron": "^33.2.0",
    "electron-builder": "^23.0.0",
    "javascript-obfuscator": "^4.1.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "icon": "normal.PNG",
    "appId": "com.mochalabs.equinoxmax",
    "files": [
      "dist/**/*",
      "assets/*",
      "index.html",
      "main.js",
      "*.png",
      "*.PNG",
      "*.gif",
      "*.jpg",
      "*.jpeg",
      "styles.css"
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "normal.PNG"
    }
  },
  "dependencies": {
    "rimraf": "^6.0.1"
  }
}
